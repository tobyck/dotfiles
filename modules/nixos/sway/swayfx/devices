input "type:touchpad" {
	tap disabled
	natural_scroll enabled
}

input "type:keyboard" {
	xkb_layout nz
	xkb_variant mao
	xkb_options lv3:alt_switch
}

bindsym Mod4+grave exec "swaymsg input '*' xkb_options 'lv3:alt_switch'"
bindsym Mod4+Shift+grave exec "swaymsg input '*' xkb_options 'lv3:ralt_alt'"
